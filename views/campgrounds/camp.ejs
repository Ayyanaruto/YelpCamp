<%layout('layout/boilerplate')%> 
<link rel="stylesheet" href="/stars/camp.css">
<div class="container" style="width: 100%; height: 500px;" id="map" >
</div>
<div class="container">
    <h1>All Campgrounds</h1>
<% for (let camp of camps){%>
  <div class="card mb-3" >
      <div class="row">
          <div class="col-md-4">
              <%if(camp.images.length) {%>
              <img class="img-fluid" alt="" src="<%=camp.images[0].url%>">
              <% }else {%>
              <img class="img-fluid" alt=""
                  src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
              <% } %>
          </div>
          <div class="col-md-8">
              <div class="card-body">
                  <h5 class="card-title"><%=camp.title %> </h5>
                  <p class="card-text"><%= camp.description %></p>
                  <p class="card-text">
                      <small class="text-muted"><%= camp.location%></small>
                  </p>
                  <a class="btn btn-primary" href="/campgrounds/<%=camp._id%>">View <%=camp.title%></a>
              </div>
          </div>
      </div>
  </div>
  <% }%>
  </div>
